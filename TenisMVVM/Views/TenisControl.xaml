<UserControl x:Class="TenisMVVM.Views.TenisControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TenisMVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
   

    <StackPanel>
        <Image HorizontalAlignment="Center" Height="100" Source="{Binding Foto}">
            <Image.Effect>
                <DropShadowEffect ShadowDepth="10" Direction="-50" Color="Black" Opacity="1.5" BlurRadius="20"/>
            </Image.Effect>
        </Image>
        <Label HorizontalAlignment="Center"  Margin="0,10,0,0" Content="{Binding Nombre}" FontFamily="../Assets/#Roboto Slab" FontWeight="Regular" FontSize="15"></Label>
    </StackPanel>
</UserControl>
